<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/newEventBeginLabelTextView"
            android:text="Begin:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Base.TextAppearance.AppCompat.Large"
            android:layout_margin="10dp"/>

        <TextView
            android:id="@+id/newEventBeginTimeTextView"
            android:text="00:00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Base.TextAppearance.AppCompat.Large"
            android:layout_margin="10dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/newEventEndLabelTextView"
            android:text="End:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Base.TextAppearance.AppCompat.Large"
            android:layout_margin="10dp"/>

        <TextView
            android:id="@+id/newEventEndTimeTextView"
            android:text="00:00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Base.TextAppearance.AppCompat.Large"
            android:layout_margin="10dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/newEventEveryXDayTextView"
            android:text="Alle X Tage:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Base.TextAppearance.AppCompat.Large"
            android:layout_margin="10dp"/>

        <EditText
            android:id="@+id/newEventEveryXDayEditText"
            android:text="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Base.TextAppearance.AppCompat.Large"
            android:layout_margin="10dp"/>


    </LinearLayout>

    <Button
        android:id="@+id/newEventSaveButton"
        android:text="Save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</LinearLayout>